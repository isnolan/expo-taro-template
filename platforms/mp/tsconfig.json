{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "include": ["./src", "./types"],
    "compileOnSave": false
  }
}
